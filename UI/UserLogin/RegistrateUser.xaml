<win:DefaultMainWindow x:Class="DCS.User.UI.RegistrateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCS.User"
        xmlns:win="clr-namespace:DCS.DefaultViewControls;assembly=DCS.DefaultViewControls"
        xmlns:resource="clr-namespace:DCS.Resource;assembly=DCS.Resource"
        mc:Ignorable="d"
        Height="300" MinWidth="600" SizeToContent="WidthAndHeight">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Resources/Images/DCS_Icon_Neu_86x.png" Grid.Row="0" Grid.Column="0" Stretch="Uniform" Height="86" Width="86" Margin="5"/>
        <Image Source="/Resources/Images/DCS_Label_large.png" Height="60" Width="300" Stretch="Uniform" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1"/>

        <Label Content="Benutzername: " Grid.Row="1" Grid.Column="0" Style="{DynamicResource Label}"/>
        <telerik:RadWatermarkTextBox Grid.Row="1" Grid.Column="1" x:Name="UserNameTextBox" Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Neuen Benutzernamen festlegen" WatermarkBehavior="HideOnTextEntered" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Left"/>

        <Label Content="Passwort: " Grid.Row="2" Grid.Column="0" Style="{DynamicResource Label}"/>
        <telerik:RadPasswordBox x:Name="PassWordBox" Grid.Row="2" Grid.Column="1" WatermarkContent="Neues Passwort festlegen" WatermarkBehavior="HideOnTextEntered" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Left"/>

        <Label Content="Passwort wiederholen: " Grid.Row="3" Grid.Column="0" Style="{DynamicResource Label}"/>
        <telerik:RadPasswordBox x:Name="PassWordRepeatBox" Grid.Row="3" Grid.Column="1" WatermarkContent="Neues Passwort wiederholen" WatermarkBehavior="HideOnTextEntered" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Left"/>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="4" Grid.Column="1">
            <CheckBox x:Name="KeepLoggedInCheckBox" Content="Angemeldet bleiben" IsChecked="{Binding Path=KeepLoggedIn, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <CheckBox x:Name="IsAdminCheckBox" Content="Admin" IsChecked="{Binding Path=IsAdmin, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{DynamicResource CheckBox}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="5" Grid.Column="1">
            <Button x:Name="RegistrateButton" Click="RegistrateButton_Click" Content="Registrieren" Margin="5" Background="{x:Null}" FontFamily="Ink Free" FontWeight="DemiBold" FontSize="14">
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF5BBD1A"/>
                        <GradientStop Color="#FFC9E8BC" Offset="1"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>
            <Button x:Name="DeclineButton" Click="DeclineButton_Click" Content="Abbrechen" Margin="5" Background="{x:Null}" FontFamily="Ink Free" FontWeight="DemiBold" FontSize="14">
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC5BEBE" Offset="1"/>
                        <GradientStop Color="#FFF53B3B" Offset="0"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>
        </StackPanel>


    </Grid>

</win:DefaultMainWindow>
