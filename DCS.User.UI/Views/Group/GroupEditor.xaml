<win:DefaultEditorWindow x:Class="DCS.User.UI.GroupEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCS.User.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        mc:Ignorable="d"
        Title="Neue Gruppe erstellen" MinHeight="120" MinWidth="400" SizeToContent="WidthAndHeight">
    
    <Grid Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Gruppenname:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Gruppenname eingeben.." Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <TextBlock Grid.Row="0" Grid.Column="2" Text="Aktiv:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <CheckBox Grid.Row="0" Grid.Column="3" IsChecked="{Binding IsActive, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Beschreibung:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <telerik:RadWatermarkTextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Beschreibung eingeben.." TextWrapping="Wrap" TextAlignment="Left" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>

    </Grid>
    
</win:DefaultEditorWindow>
