<win:DefaultMainWindow x:Class="DCS.User.UI.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCS.User.UI"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        xmlns:resource="clr-namespace:DCS.Resource;assembly=DCS.Resource"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" KeyDown="DefaultMainWindow_KeyDown"
        Title="DCS" MinHeight="300" MinWidth="600" SizeToContent="WidthAndHeight">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="DCS_Logo_Image" Grid.Row="0" Grid.Column="0" Stretch="Uniform" Height="86" Width="86" Margin="5"/>
        <Image x:Name="DCS_Label_Image" Height="60" Width="300" Stretch="Uniform" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1"/>

        <Label Content="Benutzername" Grid.Row="1" Grid.Column="0" Style="{DynamicResource Label}"/>
        <telerik:RadComboBox x:Name="UserNameLoginComboBox" Grid.Row="1" Grid.Column="1" DropDownOpened="UserNameLoginComboBox_DropDownOpened" ItemsSource="{Binding Path=UserNames, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="5" IsTextSearchEnabled="True" ClearSelectionButtonVisibility="Visible" ClearSelectionButtonContent="Auswahl aufheben" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed"/>
        <telerik:RadWatermarkTextBox x:Name="UserNameLoginTextBox" Grid.Row="1" Grid.Column="1" WatermarkContent="Benutzername eingeben" WatermarkBehavior="HideOnTextEntered" Margin="2" Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TabIndex="1" Visibility="Visible" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <Label Content="Passwort" Grid.Row="2" Grid.Column="0" Style="{DynamicResource Label}"/>
        <telerik:RadPasswordBox x:Name="PassWordLoginBox" Grid.Row="2" Grid.Column="1" WatermarkContent="Passwort eingeben" WatermarkBehavior="HideOnTextEntered" Margin="2" TabIndex="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <Label Content="Domain" Grid.Row="3" Grid.Column="0" Style="{DynamicResource Label}"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <telerik:RadComboBox Name="ServerComboBox" SelectionChanged="ServerComboBox_SelectionChanged" Width="150" TabIndex="3" Margin="2" IsTextSearchEnabled="True" ClearSelectionButtonVisibility="Collapsed" CanKeyboardNavigationSelectItems="True" DropDownOpened="ServerComboBox_DropDownOpened" ClearSelectionButtonContent="Auswahl aufheben" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <telerik:RadComboBox.EmptySelectionBoxTemplate>
                    <DataTemplate>
                        <TextBlock Text="Domain wählen" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DataTemplate>
                </telerik:RadComboBox.EmptySelectionBoxTemplate>
            </telerik:RadComboBox>
        </StackPanel>

        <CheckBox x:Name="KeepLoggedInCheckBox" Content="Angemeldet bleiben" Grid.Column="1" Grid.Row="4" TabIndex="4" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" IsChecked="{Binding Path=KeepLoggedIn, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Stretch">
            <Button x:Name="RegistrateButton" Click="RegistrateButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" TabIndex="5" IsEnabled="True" Content="Registrieren" Style="{DynamicResource ButtonAcc/Dec}"/>
            <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Anmelden" Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="False" TabIndex="6" Style="{DynamicResource ButtonAcc/Dec}"/>
        </StackPanel>

    </Grid>

</win:DefaultMainWindow>
