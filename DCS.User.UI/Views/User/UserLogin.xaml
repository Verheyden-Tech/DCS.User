<dcs:DefaultMainWindow x:Class="DCS.User.UI.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCS.User.UI"
        xmlns:localization="clr-namespace:DCS.Localization;assembly=DCS.Localization"
        xmlns:user="clr-namespace:DCS.User;assembly=DCS.User"
        xmlns:dcs="http://schemas.verheyden-tech.com/2025/xaml/presentation"
        xmlns:resource="clr-namespace:DCS.Resource;assembly=DCS.Resource"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance local:UserViewModel}"
        WindowStartupLocation="CenterScreen" KeyDown="DefaultMainWindow_KeyDown"
        Title="DCS - Login" Height="370" Width="620">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="DCS_Label_Image" Grid.Row="0" Grid.Column="1" Source="/DCS.User;component/Resources/Images/DCS_LoginLabel_500x64.png" Height="64" Width="250" Stretch="Uniform" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <telerik:RadWatermarkTextBox x:Name="UserNameLoginTextBox" Grid.Row="1" Grid.Column="1" Margin="5" WatermarkContent="Benutzername eingeben" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TabIndex="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <telerik:RadPasswordBox x:Name="PassWordLoginBox" Grid.Row="2" Grid.Column="1" Margin="5" WatermarkContent="Passwort eingeben" TabIndex="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <telerik:RadComboBox Name="DomainComboBox" ItemsSource="{Binding Domains, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectionChanged="ServerComboBox_SelectionChanged" DisplayMemberPath="DomainName" MinWidth="150" Margin="5" TabIndex="3" BorderBrush="DarkGoldenrod" IsTextSearchEnabled="True" ClearSelectionButtonVisibility="Collapsed" CanKeyboardNavigationSelectItems="True" DropDownOpened="ServerComboBox_DropDownOpened" ClearSelectionButtonContent="Auswahl aufheben" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <telerik:RadComboBox.EmptySelectionBoxTemplate>
                    <DataTemplate>
                        <TextBlock Text="Domain wählen" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Left" Background="{x:Null}"/>
                    </DataTemplate>
                </telerik:RadComboBox.EmptySelectionBoxTemplate>
            </telerik:RadComboBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <CheckBox x:Name="KeepLoggedInCheckBox" Content="Angemeldet bleiben" TabIndex="4" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=KeepLoggedIn, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="0" Margin="5" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <Image x:Name="LanguageFlagImage" Source="/DCS.User;component/Resources/Images/german_Flag.png" Margin="2" Width="16" Height="16" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <TextBlock x:Name="CurrentLanguageTextBlock" FontSize="12" Background="{x:Null}" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left"/>
            <Border Margin="5" Width="0.5" Background="{x:Null}" BorderBrush="DarkGoldenrod" BorderThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <telerik:RadButton x:Name="ChangeUserLanguageButton" Foreground="Gray" Margin="2" Background="{x:Null}" BorderBrush="{x:Null}" Content="Sprache ändern.." FontSize="12" Click="ChangeUserLanguageButton_Click" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Stretch">
            <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Anmelden" Margin="2" FontSize="12" Background="{x:Null}" BorderBrush="{x:Null}" TabIndex="6" Foreground="#b8860b" Style="{DynamicResource ButtonAcc/Dec}"/>
            <TextBlock Text="oder" FontSize="6" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" FontWeight="ExtraLight"/>
            <Button x:Name="RegistrateButton" Click="RegistrateButton_Click" Margin="2" FontSize="12" Background="{x:Null}" BorderBrush="{x:Null}" TabIndex="5" IsEnabled="True" Foreground="#b8860b" Content="Registrieren" Style="{DynamicResource ButtonAcc/Dec}"/>
        </StackPanel>

    </Grid>

</dcs:DefaultMainWindow>
