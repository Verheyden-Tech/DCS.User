<dcs:DefaultEditorWindow x:Class="DCS.User.UI.ChangeUserPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:dcs="http://schemas.verheyden-tech.com/2025/xaml/presentation"
        xmlns:local="clr-namespace:DCS.User.UI"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:UserViewModel}"
        Title="Passwort ändern" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    
    <Grid Margin="5">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Margin="5" Background="{x:Null}" BorderBrush="DarkGoldenrod" BorderThickness="1" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <telerik:RadPasswordBox x:Name="CurrentUserPasswordBox" WatermarkContent="Aktuelles Passwort eingeben.." BorderBrush="{x:Null}" Background="{x:Null}" LostFocus="CurrentUserPasswordBox_LostFocus" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        </Border>
        <Label x:Name="OldPasswordValidation" Grid.Row="0" Grid.Column="1" Margin="5" Visibility="Collapsed" Height="16" Width="16"/>

        <Border Grid.Row="1" Grid.Column="0" Margin="5" Background="{x:Null}" BorderBrush="DarkGoldenrod" BorderThickness="1" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <telerik:RadPasswordBox x:Name="UserPassword" WatermarkContent="Neues Passwort festlegen.." BorderBrush="{x:Null}" Background="{x:Null}" LostFocus="UserPassword_LostFocus" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        </Border>
        <Label x:Name="NewPasswordValidation" Grid.Row="1" Grid.Column="1" Margin="5" Height="16" Width="16" Visibility="Collapsed"/>

        <Border Grid.Row="2" Grid.Column="0" Margin="5" Background="{x:Null}" BorderBrush="DarkGoldenrod" BorderThickness="1" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <telerik:RadPasswordBox x:Name="UserPasswordRepeat" WatermarkContent="Passwort wiederholen.." BorderBrush="{x:Null}" Background="{x:Null}" LostFocus="UserPasswordRepeat_LostFocus" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        </Border>
        <Label x:Name="RepeatPasswordValidation" Grid.Row="2" Grid.Column="1" Margin="5" Height="16" Width="16" Visibility="Collapsed"/>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Stretch">
            <telerik:RadButton x:Name="CancelButton" Content="Abbrechen" Background="{x:Null}" BorderBrush="#b8860b" Foreground="Red" CornerRadius="10" Click="CancelButton_Click" Margin="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <telerik:RadButton x:Name="SavePasswordButton" Content="Speichern" Background="{x:Null}" BorderBrush="#b8860b" Foreground="Green" CornerRadius="10" Click="SavePasswordButton_Click" Margin="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </StackPanel>
        
    </Grid>
    
</dcs:DefaultEditorWindow>
