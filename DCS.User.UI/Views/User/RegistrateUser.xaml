<win:DefaultMainWindow x:Class="DCS.User.UI.RegistrateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCS.User.UI"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        xmlns:resource="clr-namespace:DCS.Resource;assembly=DCS.Resource"
        mc:Ignorable="d"
        MinHeight="300" MinWidth="600" SizeToContent="WidthAndHeight">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/DCS.User;component/Resources/Images/Data Control System.PNG" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" MinHeight="64" MinWidth="200" Stretch="Uniform" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <Label Content="Benutzername" Grid.Row="1" Grid.Column="0" Style="{DynamicResource Label}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <telerik:RadWatermarkTextBox Grid.Row="1" Grid.Column="1" x:Name="UserNameTextBox" BorderBrush="SteelBlue" Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Neuen Benutzernamen festlegen" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <Label Content="Passwort" Grid.Row="2" Grid.Column="0" Style="{DynamicResource Label}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <telerik:RadPasswordBox x:Name="PassWordBox" Grid.Row="2" Grid.Column="1" BorderBrush="SteelBlue" WatermarkContent="Neues Passwort festlegen" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <Label Content="Passwort wiederholen" Grid.Row="3" Grid.Column="0" Style="{DynamicResource Label}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <telerik:RadPasswordBox x:Name="PassWordRepeatBox" Grid.Row="3" Grid.Column="1" BorderBrush="SteelBlue" WatermarkContent="Neues Passwort wiederholen" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <StackPanel Orientation="Horizontal" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="4" Grid.Column="1">
            <CheckBox x:Name="IsADUserCheckBox" Content="AD-Benutzer" Margin="2" Checked="IsADUserCheckBox_Checked" Unchecked="IsADUserCheckBox_Unchecked" IsChecked="{Binding Path=IsADUser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{DynamicResource CheckBox}"/>
            <CheckBox x:Name="KeepLoggedInCheckBox" Content="Angemeldet bleiben" Margin="2" IsChecked="{Binding Path=KeepLoggedIn, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <CheckBox x:Name="IsAdminCheckBox" Content="Admin" Margin="2" IsChecked="{Binding Path=IsAdmin, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{DynamicResource CheckBox}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="5" Grid.Column="1">
            <Button x:Name="RegistrateButton" Click="RegistrateButton_Click" Content="Registrieren" Margin="2" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14"/>
            <Button x:Name="DeclineButton" Click="DeclineButton_Click" Content="Abbrechen" Margin="2" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14"/>
        </StackPanel>

    </Grid>

</win:DefaultMainWindow>
