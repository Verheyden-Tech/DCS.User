<win:DefaultMainWindow x:Class="DCS.User.UI.CreateNewUserDomain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCS.User.UI"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance local:UserDomainViewModel}"
        Title="Neue Domain anlegen" Height="120" Width="400" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadWatermarkTextBox x:Name="DomainNameTextBox" Grid.Row="0" Grid.Column="0" Text="{Binding DomainName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Domain Name" MinWidth="200" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <telerik:RadWatermarkTextBox x:Name="OrganisationDescriptionTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" WatermarkContent="Domain Beschreibung" TextWrapping="Wrap" MinWidth="200" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <telerik:RadButton x:Name="CreateDomainButton" Grid.Row="0" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}" Click="CreateDomainButton_Click" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <Image Source="{telerik:RadGlyph Size=1, Type=Image, Glyph=&#xe118;}" Width="24" Height="24"/>
        </telerik:RadButton>

    </Grid>

</win:DefaultMainWindow>
