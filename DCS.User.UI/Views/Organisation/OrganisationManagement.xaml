<view:DefaultAppControl x:Class="DCS.User.UI.OrganisationManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS.User.UI"
             xmlns:view="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadAutoCompleteBox x:Name="SearchUserOrganisationBox" Grid.Row="0" Grid.Column="0" WatermarkContent="Organisation suchen.." Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <telerik:RadButton Grid.Row="0" Grid.Column="1" x:Name="CreateNewOrganisationButton" Content="Neue Organisation erstellen" Click="CreateNewOrganisationButton_Click" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <GroupBox Header="Verfügbare Organisationen" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <telerik:RadGridView x:Name="OrganisationGridView" GroupPanelBackground="Transparent" Margin="5" BorderBrush="Transparent" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                
                <telerik:RadGridView.ContextMenu>
                    <ContextMenu Name="OrganisationManagementContextMenu"/>
                </telerik:RadGridView.ContextMenu>
                
                <telerik:RadGridView.Columns>
                    <telerik:GridViewDataColumn DataMemberBinding="{Binding Ident}" Header="ID" MinWidth="70"/>
                    <telerik:GridViewDataColumn DataMemberBinding="{Binding Name}" Header="Organisationsname" MinWidth="150"/>
                    <telerik:GridViewDataColumn DataMemberBinding="{Binding Description}" Header="Beschreibung" MinWidth="200"/>
                    <telerik:GridViewCheckBoxColumn DataMemberBinding="{Binding IsActive}" Header="Aktiv" MinWidth="50"/>
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>
        </GroupBox>

    </Grid>
</view:DefaultAppControl>
