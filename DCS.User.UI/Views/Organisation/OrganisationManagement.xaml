<view:DefaultAppControl x:Class="DCS.User.UI.OrganisationManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS.User.UI"
             xmlns:view="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadAutoCompleteBox x:Name="SearchUserGroupBox" Grid.Row="0" Grid.Column="0" WatermarkContent="Gruppe suchen.." Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <telerik:RadButton Grid.Row="0" Grid.Column="1" x:Name="CreateNewOrganisationButton" Content="Neue Gruppe erstellen" Click="CreateNewOrganisationButton_Click" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <telerik:RadGridView x:Name="OrganisationGridView" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" ShowGroupPanel="False" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            
            <telerik:RadGridView.ContextMenu>
                <ContextMenu x:Name="OrganisationManagementContextMenu"/>
            </telerik:RadGridView.ContextMenu>
            
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Ident}" Header="ID" MinWidth="70"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Name}" Header="Gruppenname" MinWidth="150"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Description}" Header="Beschreibung" MinWidth="200"/>
                <telerik:GridViewCheckBoxColumn DataMemberBinding="{Binding IsActive}" Header="Aktiv" MinWidth="50"/>
            </telerik:RadGridView.Columns>
            
        </telerik:RadGridView>
        
    </Grid>
</view:DefaultAppControl>
