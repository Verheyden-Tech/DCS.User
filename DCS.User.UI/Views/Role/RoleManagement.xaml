<view:DefaultAppControl x:Class="DCS.User.UI.RoleManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS.User.UI"
             xmlns:view="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadAutoCompleteBox x:Name="SearchUserRoleBox" Grid.Row="0" Grid.Column="0" WatermarkContent="Rolle suchen.." Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <telerik:RadButton Grid.Row="0" Grid.Column="1" x:Name="CreateNewRoleButton" Content="Neue Rolle erstellen" CornerRadius="5" Click="CreateNewRoleButton_Click" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <telerik:RadGridView x:Name="RoleGridView" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" AutoGenerateColumns="False" GroupPanelBackground="White" IsReadOnly="True" SelectionMode="Single" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >

            <telerik:RadGridView.ContextMenu>
                <ContextMenu x:Name="RoleManagementContextMenu">
                    <MenuItem Header="Rolle anlegen" Click="CreateNewRoleButton_Click">
                        <MenuItem.Icon>
                            <Image Source="{telerik:RadGlyph Size=1, Type=Image, Glyph=&#xe11e;}" Width="16" Height="16" Stretch="Uniform"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Rolle bearbeiten" Click="EditRole_Click">
                        <MenuItem.Icon>
                            <Image Source="{telerik:RadGlyph Size=1, Type=Image, Glyph=&#xe10b;}" Width="16" Height="16" Stretch="Uniform"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Rolle löschen" Click="DeleteRole_Click">
                        <MenuItem.Icon>
                            <Image Source="{telerik:RadGlyph Size=1, Type=Image, Glyph=&#xe10c;}" Width="16" Height="16" Stretch="Uniform"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Rollen generieren" Click="GenerateRoles_Click">
                        <MenuItem.Icon>
                            <Image Source="{telerik:RadGlyph Size=1, Type=Image, Glyph=&#xe13b;}" Width="16" Height="16" Stretch="Uniform"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </telerik:RadGridView.ContextMenu>

            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Ident}" Header="ID" MinWidth="70"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Name}" Header="Rollenname" MinWidth="150"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Description}" Header="Beschreibung" MinWidth="200"/>
                <telerik:GridViewCheckBoxColumn DataMemberBinding="{Binding IsActive}" Header="Aktiv" MinWidth="50"/>
            </telerik:RadGridView.Columns>

        </telerik:RadGridView>

    </Grid>

</view:DefaultAppControl>
