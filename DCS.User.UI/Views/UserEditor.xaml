<win:DefaultEditorWindow x:Class="DCS.User.UI.UserEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCS.User.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        mc:Ignorable="d" 
        Title="Neuen Benutzer erstellen" MinHeight="200" MinWidth="400" SizeToContent="WidthAndHeight">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadButton Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="5" MinWidth="50" MinHeight="50">
            
        </telerik:RadButton>

        <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="1" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Benutzername eingeben.." Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <telerik:RadPasswordBox Grid.Row="0" Grid.Column="2" x:Name="UserPasswordBox" Text="{Binding PassWord, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Neues Passwort festlegen.." Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <Button Grid.Row="0" Grid.Column="2" x:Name="ChangeUserPasswordButton" Visibility="Collapsed" Click="ChangeUserPasswordButton_Click" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left">
            <Image x:Name="ChangePasswordImage" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Button>

        <CheckBox Grid.Row="1" Grid.Column="2" IsChecked="{Binding IsActive, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Content="Aktiv" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding IsAdmin, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Content="Admin" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <Grid x:Name="ListBoxGrid" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="5">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" x:Name="GroupBoxGrid">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <telerik:RadAutoCompleteBox Grid.Row="0" Grid.Column="0" x:Name="GroupAutoCompleteBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5">

                </telerik:RadAutoCompleteBox>
                <telerik:RadButton Grid.Row="0" Grid.Column="1" x:Name="AddGroupButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,5,5,5" MinHeight="20" MinWidth="20">

                </telerik:RadButton>

                <telerik:RadListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="GroupListBox" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="60" MinWidth="120">
                    
                </telerik:RadListBox>

            </Grid>

            <Grid Grid.Row="1" Grid.Column="1" x:Name="OrganisationBoxGrid">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <telerik:RadAutoCompleteBox Grid.Row="0" Grid.Column="0" x:Name="OrganisationAutoCompleteBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5">
                    
                </telerik:RadAutoCompleteBox>
                <telerik:RadButton Grid.Row="0" Grid.Column="1" x:Name="AddOrganisationButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,5,5,5" MinHeight="20" MinWidth="20">

                </telerik:RadButton>

                <telerik:RadListBox x:Name="OrganisationListBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="60" MinWidth="120">

                </telerik:RadListBox>

            </Grid>
        </Grid>
        
    </Grid>
    
</win:DefaultEditorWindow>
